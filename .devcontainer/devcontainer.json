{
	"name": "Docker Dev Container",
	"image": "mcr.microsoft.com/vscode/devcontainers/python:3.9",  // Example base image
	"features": {
	  "docker-in-docker": "latest"  // Optional: Install Docker CLI inside the container
	},
	"mounts": [
	  "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"  // Mount Docker socket
	],
	"postCreateCommand": "docker --version && docker-compose --version",  // Verify Docker and Docker Compose installation
	"extensions": [
	  "ms-azuretools.vscode-docker"  // Optional: Install Docker extension for VS Code
	]
  }
  